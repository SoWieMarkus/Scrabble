<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintDimensionRatio="1:1">

    <ImageView
        android:id="@+id/layout_letter_view_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/letter_background" />

    <TextView
        android:id="@+id/layout_letter_view_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/layout_letter_view_background"
        app:layout_constraintEnd_toEndOf="@+id/layout_letter_view_background"
        app:layout_constraintStart_toStartOf="@+id/layout_letter_view_background"
        app:layout_constraintTop_toTopOf="@+id/layout_letter_view_background" />
</androidx.constraintlayout.widget.ConstraintLayout>